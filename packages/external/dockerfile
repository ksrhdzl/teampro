# -----------------------
FROM node:22-alpine AS base
RUN apk update && apk add --no-cache libc6-compat
RUN corepack enable

# -----------------------
FROM base AS installer
WORKDIR /usr/src/app
COPY package.json ./package.json
COPY .yarnrc.yml ./.yarnrc.yml
COPY yarn.lock ./yarn.lock
RUN yarn install

# -----------------------
FROM base AS builder
WORKDIR /usr/src/app
COPY . .
COPY --from=installer /usr/src/app/package.json ./package.json
COPY --from=installer /usr/src/app/node_modules ./node_modules
COPY --from=installer /usr/src/app/yarn.lock ./yarn.lock
RUN yarn run build

# -----------------------
FROM base AS runner
WORKDIR /usr/src/app

RUN addgroup --system --gid 1001 hello
RUN adduser --system --uid 1001 world
USER world

COPY --from=builder --chown=world:hello /usr/src/app/dist/standalone ./
COPY --from=builder --chown=world:hello /usr/src/app/dist/static ./dist/static
COPY --from=builder --chown=world:hello /usr/src/app/public ./public

EXPOSE 3000

ENV NODE_PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "server.js"]